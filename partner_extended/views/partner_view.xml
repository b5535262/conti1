    <!--Extended Form view of Partner  -->
    <record id="res_partner_view_extended" model="ir.ui.view">
        <field name="name">res.partner.formview.extended</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']/group[last()]" position="inside">
                <group name="Status" string="Status">
                   <field name="collector_status_id"/>
                   <field name="cust_status"/>
                   <field name="sales_tax_status"/>
                </group>
                <group name="Other" string='Other'>
                   <field name="assigned_collector_id"/>
                   <field name="entity_code_id"/>
                   <field name="invoice_del_method_id"/>
                   <field name="oem_type_id"/>
                   <field name="duns_no"/>
               </group>
            </xpath>
           <xpath expr="//page[@name='accounting']/group/group[@name='acc_sale']" position="after">
                <group name='Accounting' string="Accounting">
                    <field name="is_hold_account"/>
                    <field name="acc_manager_id"/>
                    <field name="former_account_name"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="credit_limit"/>
            </xpath>
        </field>
    </record>
    
    <!-- Extended Search view of Partner -->
    <record id="res_partner_view_search_extend" model="ir.ui.view">
            <field name="name">res.partner.view.search.extended</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                    <filter name="supplier" position="after">
                        <separator/>
                        <filter string="Hold Account" name="is_hold_account" domain="[('is_hold_account','=',1)]"/>
                        <separator/>
                    </filter>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_assigned_collector_id" string="Assigned Collector"
                               context="{'group_by': 'assigned_collector_id'}"/>
                        <filter name="group_collector_status_id" string="Collector Status"
                               context="{'group_by': 'collector_status_id'}"/>
                        <filter name="group_entity_code_id" string="Entity / Use Code"
                               context="{'group_by': 'entity_code_id'}"/>
                        <filter name="group_oem_type_id" string="Primary OEM"
                               context="{'group_by': 'oem_type_id'}"/>
                        <filter name="group_invoice_del_method_id" string="Invoice Delivery Method"
                               context="{'group_by': 'invoice_del_method_id'}"/>
                        <filter name="group_cust_status" string="Customer Status"
                               context="{'group_by': 'cust_status'}"/>
                        <filter name="group_sales_tax_status" string="Sales Tax Status"
                               context="{'group_by': 'sales_tax_status'}"/>
                   </group>
            </field>
        </record>
