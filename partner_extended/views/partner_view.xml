<odoo>

	<!-- Tree view of Entity and Use Code -->
		<record id="view_entity_code_tree" model="ir.ui.view">
			<field name="name">view.entity.code.tree</field>
			<field name="model">entity.code</field>
			<field name="arch" type="xml">
				<tree editable="top">
					<field name="name" required="1"/>
                    <field name="code"/>
				</tree>
			</field>
		</record>

	<!-- Form view of Entity and Use Code -->
        <record id="view_entity_code_form" model="ir.ui.view">
			<field name="name">view.entity.code.form</field>
			<field name="model">entity.code</field>
			<field name="arch" type="xml">
				<form>
                    <group col="4">
					    <field name="name" required="1"/>
                        <field name="code"/>
                    </group>
                </form>
			</field>
		</record>

	<!-- Action of Entity and Use Code -->
		<record id="entity_code_action" model="ir.actions.act_window">
			<field name="name">Entity / Use Code</field>
			<field name="res_model">entity.code</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
		</record>

	<!-- Menuitem of Entity and Use Code -->
		<menuitem action="entity_code_action"
				id="menu_entity_code"
				parent="sale.menu_sale_config" />

