<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit sale order form view -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- add customer Many2many field -->
            <xpath expr="//notebook/page[2]" position="after">
                <page string="Customer Locations">
                    <group>
                        <group>
                            <field name="child_ids" widget="many2many_tags" domain="[('parent_id','=',partner_id)]" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <!-- add Assign Location button in sale order form -->
            <xpath expr="//header/button[@name='print_quotation']" position="after">
                <button name="%(action_sale_customer_wizard)d" string="Assign Location" type="action" states="draft,sent"/>
            </xpath>
        </field>
    </record>

</odoo>
