<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_customer_wizard_view" model="ir.ui.view">
        <field name="name">Customer Location</field>
        <field name="model">sale.customer.wizard</field>
        <field name="arch" type="xml">
            <form string="Customers">
                <header>
                    <button name="assign_equaly_qty" string="Assign Equaly Qty" type="object"/>
                    <button name="assign_remaining_qty" string="Assign Remaining Qty" type="object"/>
                </header>
                <group>
                    <group>
                        <field name="partner_id" invisible="1"/>
                        <field name="total_qty" readonly="1"/>
                    </group>
                    <group>
                        <field name="remaining_qty" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Customers">
                        <field name="customer_ids">
                            <tree editable="True" create="false" delete="false">
                                <field name="partner_id"/>
                                <field name="qty"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="assign_location" string="Save" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_customer_wizard" model="ir.actions.act_window">
        <field name="name">Customer Location</field>
        <field name="res_model">sale.customer.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
